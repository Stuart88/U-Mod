<UserControl x:Class="U_Mod.Games.Oblivion.Pages.Install.Install1PreInstallVid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:custom="clr-namespace:U_Mod.Custom"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="500"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <custom:VideoControl Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" x:Name="VideoControl"/>
        <Button x:Name="QuitButton" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" 
                Margin="0,0,10,0"
                 Click="QuitButton_Click"/>
        <Button x:Name="NextButton" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" 
                Margin="10,0,0,0"
                Opacity="0.6"
                 Click="NextButton_Click"/>
    </Grid>
</UserControl>
